{
  "name": "vigilance-engine",
  "version": "0.1.0",
  "scripts": {
    "dev": "npm run build && node build/index.js",
    "dev:watch": "nodemon --exec npm run build && node build/index.js",
    "dev:ts": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node build/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "prisma": "^5.0.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.0"
  }
}
