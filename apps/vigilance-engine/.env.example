# Vigilance Engine (Backend) Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
NODE_ENV=development
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nanny_dev
# For SQLite (development):
# DATABASE_URL=file:./dev.db

# Redis Cache
REDIS_URL=redis://localhost:6379

# API Keys & Secrets
API_KEY=your-api-key-for-clients-here
JWT_SECRET=your-jwt-secret-key-here

# Encryption Keys
RSA_PRIVATE_KEY=your-rsa-private-key-here
RSA_PUBLIC_KEY=your-rsa-public-key-here
AES_SECRET_KEY=your-aes-256-secret-key-here

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn-optional

# Feature Flags
ENABLE_AUDIT_LOGS=true
ENABLE_MESSAGE_SCORING=true
MOCK_DATABASE=false
